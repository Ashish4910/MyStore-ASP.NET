@page
@model MyStore.Pages.Product.EditModel
@{
}

<br />
<h2> Edit Product</h2>


@if (Model.errorMessage.Length > 0)
{
	<div class='alert alert-warning alert-dismissible fade show ' role='alert'>
		<strong >@Model.errorMessage</strong>
		<button type ='button' class='btn-close' data-bs-dismiss='alert' aria-label='close'></button>
	</div>
}


 <form method="POST">
	 <input type="hidden" name="id" value="@Model.productInfo.id" />
	 <div class="row mb-3">

		<lable class=" col-sm-3 col-form-label"> Name</lable>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="name" value="@Model.productInfo.name" />
		</div>

	 </div>
	<div class="row mb-3">

		<lable class=" col-sm-3 col-form-label"> Email</lable>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="email" value="@Model.productInfo.email" />
		</div>

	</div>

	<div class="row mb-3">

		<lable class=" col-sm-3 col-form-label"> Phone </lable>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="phone " value="@Model.productInfo.phone" />
		</div>

	 </div>

	<div class="row mb-3">

		<lable class=" col-sm-3 col-form-label"> Address</lable>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="Address" value="@Model.productInfo.address" />
		</div>

	</div>


	@if (Model.successMessage.Length > 0)
{
	<div class="row mb-3">
     <div class="col-sm-9">
		 <div class='alert alert-warning alert-dismissible fade show ' role='alert'>

	 </div>
	</div>
	</div>
	
		
	
}
	
	<div class=" row mb-3">
		<div class="offset-sm-3 col-sm-3 d-grid">
			<button type="submit" class="btn btn-primary" >Submit</button>
		</div

		<div class="col-sm-3 d-grid" >
        <div class="col-sm-3 d-grid">
			<a class="btn btn-outline-primary" href="/" role="button">cancel</a>
		</div>     
		</div>
	</div>
	

 </form>